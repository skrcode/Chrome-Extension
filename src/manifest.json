{
	"manifest_version": 2,

	"name": "Quora Classifier",
	"description": "Quora Answer Classifier - Chrome Extension",
	"version": "1.0",
	"author": "Suraj Rajan",

	"background": {
		"scripts": ["popup.js"],
		"persistent": true
	},

	"permissions": [
        "tabs",
        "http://*/",
        "https://*/",
        "http://localhost/*",
        "https://*/*"
    ],
	"browser_action": {
		"default_icon": "logo.png",
		"default_popup": "popup.html"
	}
}